<MenuPrincipal>:
    canvas:
        Color:
            rgb:1,1,1
        Rectangle:
            size:self.size
            pos:self.pos
    Image:
        source:'./Imagenes/storj.jpg'
        size_hint:(.25,.25)
        pos_hint:{"center_x":.5,"center_y":.75}


    Label:


        text_size: cm(6), cm(4)
#        size_hint:(.20,.10)
        pos_hint:{"center_x":.55,"center_y":.49}
        text:"多ya tienes una cuenta?"
        color: .8,.9,0,1



    Button:
        id:registrarse
        text:"REGISTRARSE"
        font_size:"15"
        padding_x:"float"
#        padding_x:"relative"
#        padding_y:"relative"
        size_hint:(.20,.10)
        pos_hint:{"center_x":.5,"center_y":.5}
        background_normal:'./Imagenes/normalcon.png'
        background_down:'./Imagenes/normal.png'
        border:30,30,30,30
        on_press:
            root.manager.transition.duration = 0
            root.manager.current = 'menu_registro'
#            root.probar()

    Button:
        text:"INGRESAR"
        font_size:"15"
#        padding_x:"relative"
#        padding_y:"relative"
        size_hint:(.20,.10)
        pos_hint:{"center_x":.5,"center_y":.25}
        background_normal:'./Imagenes/azulcon.png'
        background_down:'./Imagenes/azul.png'
        border:30,30,30,30
        on_press:root.manager.current = 'menu_ingresar'




